<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/index.css" />
    <style>
      ul {
        padding-inline: 20px;
        list-style-type: disc;
      }
    </style>
    <title><%= title %></title>
  </head>
  <body>
    <%- include('header'); %>
    <div class="blog_meta">
      <h1><%= title %></h1>
      <span> <%= date %> </span>
    </div>
    <section id="content" class="content"><%= body %></section>

    <script>
      let ConvertStringToHTML = function (str) {
        let parser = new DOMParser();
        let doc = parser.parseFromString(str, 'text/html');
        return doc.body;
      };
      let contentSec = document.getElementById('content');
      contentSec.innerHTML = ConvertStringToHTML(
        contentSec.innerHTML
      ).innerText;
    </script>
  </body>
</html>
